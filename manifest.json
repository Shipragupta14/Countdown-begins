{
	"name" : "Countdown begins",
	"version": "0.0.1",
    "manifest_version": 2,
    "description":"Shows the runtime of the active tab",
    "permissions" : [
    	"tabs",
        "history",
        "storage"
    ],

    "web_accessible_resources" : [
        "*.html",
        "*.js"
    ],
    "background": {
    "scripts": ["background.js"]
    },
   
    "browser_action":{
    	"default_icon":{
        "16": "/icon16.png",
        "48": "/icon48.png",
        "128": "/icon128.png"
      },
      "default_popup": "popup.html"
    },

    "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }
]

 
}

